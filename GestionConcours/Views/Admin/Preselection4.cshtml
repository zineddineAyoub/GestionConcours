<script>

    //######################################### Export to EXCELL
    function exportTableToExcel(tableID) {
        var downloadLink;
        var dataType = 'application/vnd.ms-excel';
        var tableSelect = document.getElementById(tableID);
        var tableHTML = tableSelect.outerHTML.replace(/ /g, '%20');

        // Specify file name
        filename = "ListeCandidats_Preselection_4A_" + $("#fil :selected").val() + "_" + $("#diplome :selected").val();
        filename = filename ? filename + '.xls' : 'ListCandidatPreselection_4A.xls';

        // Create download link element
        downloadLink = document.createElement("a");

        document.body.appendChild(downloadLink);

        if (navigator.msSaveOrOpenBlob) {
            var blob = new Blob(['\ufeff', tableHTML], {
                type: dataType
            });
            navigator.msSaveOrOpenBlob(blob, filename);
        } else {
            // Create a link to the file
            downloadLink.href = 'data:' + dataType + ', ' + tableHTML;

            // Setting the file name
            downloadLink.download = filename;

            //triggering the function
            downloadLink.click();
        }
    }


    $(document).ready(function () {

        $("#info_sum2").css("color", "red");
        $("#info2_fil").css("color", "darkslateblue");


        //######################################## Ancienne Config
        $("#diplome").change(function () {

            if ($("#fil option:selected").val() != '0') {

                loadingData();

            }
        });
        $("#fil").change(function () {

            if ($("#diplome option:selected").val() != '0') {

                loadingData();

            }
        });

        //######################################## Button Preselection
        $("#btn_preselec").click(function () {

            valider();
            if (valider()) {

                $.get("/Admin/CalculerPreselec4", { fil: $("#fil :selected").val(), diplome: $("#diplome :selected").val(), Cs1: $("#Cs1 :selected").val(), Cs2: $("#Cs2 :selected").val(), Cs3: $("#Cs3 :selected").val(), Cs4: $("#Cs4 :selected").val(), Cs5: $("#Cs5 :selected").val(), Cs6: $("#Cs6 :selected").val(), Cbac: $("#Cbac :selected").val(), seuil: $("#seuil").val(), niv: 4 }, function (data) {

                    $("#tableConvoq").hide();
                    $("#info2").hide();
                    $("#btn_table2").show();
                    $("#table").show();
                    $("#btn_export").show();
                    $("#tbody").empty();

                    getPourcentage();
                    scrollToAnchor('gototable');

                    $.each(data, function (index, row) {

                        remplirTable(index, row);
                    });
                });
            }
        });

        //######################################## Button Convoqués
        $("#btn_table2").click(function () {
            $.get("/Admin/GetConvoquets", { fil: $("#fil :selected").val(), diplome: $("#diplome :selected").val(), niv: 4 }, function (data) {


                console.log($("#fil :selected").val());


                $("#table").hide();
                $("#btn_export").hide();
                $("#info").hide();
                $("#info2").show();
                $("#tableConvoq").show();
                $("#tbodyConvoq").empty();
                $("#info2_fil").text($("#fil :selected").val());

                $.each(data, function (index, row) {
                    $("#tbodyConvoq").append(
                        "<tr><td>" + (index + 1) + "</td><td>" + row.Nom +
                        "</td><td>" + row.Prenom + "</td><td>" + row.Matricule +
                        "</td><td>" + row.Cin + "</td></tr>");

                });
                scrollToAnchor('gototable2');

            });
        });
        //################################### Loading Data
        function loadingData() {

            $("#Cs1").val(0);
            $("#Cs2").val(0);
            $("#Cs3").val(0);
            $("#Cs4").val(0);
            $("#Cs5").val(0);
            $("#Cs6").val(0);
            $("#Cbac").val(0);
            $("#seuil").val(0);

            $("#table").hide();
            $("#btn_export").hide();
            $("#tableConvoq").hide();
            $("#info2").hide();
            $("#btn_table2").hide();
            $("#erreur").hide();

            // set Configuration
            $.get("/Admin/GetConfig", { fil: $("#fil :selected").val(), diplome: $("#diplome :selected").val() }, function (data) {

                $("#table").show();
                $("#btn_export").show();
                $("#btn_table2").show();

                $("#Cs1").val(data.CoeffS1);
                $("#Cs2").val(data.CoeffS2);
                $("#Cs3").val(data.CoeffS3);
                $("#Cs4").val(data.CoeffS4);
                $("#Cs5").val(data.CoeffS5);
                $("#Cs6").val(data.CoeffS6);
                $("#Cbac").val(data.CoeffBac);
                $("#seuil").val(data.NoteSeuil);
            });


            //loading data in table
            $.get("/Admin/GetConvoquets", { fil: $("#fil :selected").val(), diplome: $("#diplome :selected").val(), niv: 4 }, function (data) {
                if (data.length !== 0) {

                    $("#tableConvoq").hide();
                    $("#info2").hide();
                    $("#table").show();
                    $("#btn_export").show();
                    $("#erreur").hide();
                    $("#btn_table2").show();
                }

                $("#info2_fil").text($("#fil :selected").val());
                getPourcentage();
                $("#tbody").empty();

                $.each(data, function (index, row) {
                    remplirTable(index, row);
                    scrollToAnchor('gototable');
                });

            });
        }

        //######################################## Remplir Table
        function remplirTable(index, row) {
            //Date
            var milli = row.Date_inscription.replace(/\/Date\((-?\d+)\)\//, '$1');
            var date_inscrip = new Date(parseInt(milli)).toLocaleString();
            //table
            $("#tbody").append(
                "<tr><td>" + (index + 1) + "</td><td>" + row.Sexe + "</td><td>" + row.Nom +
                "</td><td>" + row.Prenom + "</td><td>" + row.Filiere +
                "</td><td>" + row.NoteBac + "</td><td>" + row.Note1 +
                "</td><td>" + row.Note2 + "</td><td>" + row.Note3 +
                "</td><td>" + row.Note4 + "</td><td>" + row.Note5 +
                "</td><td>" + row.Note6 + "</td><td>" + row.NoteDip +
                "</td><td>" + row.NoteLic + "</td><td>" + row.Type_dip +
                "</td><td>" + row.Etablissement + "</td><td>" + row.Ville_dip +
                "</td><td>" + row.Matricule + "</td><td>" + row.AnneUni1 +
                "</td><td>" + row.AnneUni2 + "</td><td>" + row.AnneUni3 +
                "</td><td>" + row.Redoublant1 + "</td><td>" + row.Redoublant2 +
                "</td><td>" + row.Redoublant3 + "</td><td>" + date_inscrip +
                "</td></tr>");
        }

        //####################################### Validation

        function valider() {
            if ($("#fil :selected").val() == 0 || $("#diplome :selected").val() == 0 || $("#Cs1 :selected").val() == 0 ||
                $("#Cs2 :selected").val() == 0 || $("#Cs3 :selected").val() == 0 || $("#Cs4 :selected").val() == 0 ||
                $("#Cs5 :selected").val() == 0 || $("#Cs6 :selected").val() == 0 || $("#Cbac :selected").val() == 0 ||
                $("#seuil").val() == 0) {

                $("#erreur").show();
                return false;
            }
            else {

                $("#erreur").hide();
                return true;
            }
        }


        //######################################## Pourcentage

        function getPourcentage() {

            $("#info").show();
            $.get("/Admin/GetPourcentage", { fil: $("#fil :selected").val(), diplome: $("#diplome :selected").val(), niv: 4 }, function (data) {
                $("#info_sum1").empty();
                $("#info_sum2").empty();

                $.each(data, function (index, row) {
                    if (index == 0) {
                        $("#info_sum1").append(row);
                    } else {
                        $("#info_sum2").append(row);
                    }
                });
            });
            if (!($("#btn_table2").is(":visible"))) {
                $("#info").hide();
            }
        }

        //######################################### Scroll
        function scrollToAnchor(aid) {
            var aTag = $("a[name='" + aid + "']");
            $('html,body').animate({ scrollTop: aTag.offset().top }, 'slow');
        }
    });
</script>
